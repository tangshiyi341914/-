<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.project.model.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="CHAR"/>
        <result column="birthday" property="birthday" jdbcType="DATE"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>
    <resultMap id="AllUserInfo" type="com.project.model.User" extends="BaseResultMap">
        <association property="role" javaType="com.project.model.Role">
            <id column="rid" property="id"/>
            <result column="nameZh" property="nameZh"/>
        </association>
    </resultMap>
    <select id="getAllUsers" resultMap="AllUserInfo">
        select u.*,ur.* ,r.*  from user u,user_role ur,role r where u.id=ur.uid and ur.rid=r.id

        <if test="user.name !=null and user.name!=''">
            and u.name like concat('%',#{user.name},'%')
        </if>
        <if test="beginDateScope !=null">
            and u.birthday between #{beginDateScope[0]} and #{beginDateScope[1]}
        </if>
        <if test="page !=null and size!=null">
            limit #{page},#{size}
        </if>
    </select>
    <select id="getTotal" resultType="java.lang.Long">
        select count(*) from user u
        <where>
            <if test="user!=null">
                <if test="user.name !=null and user.name!=''">
                    and u.name like concat('%',#{user.name},'%')
                </if>
            </if>
            <if test="beginDateScope !=null">
                and u.birthday between #{beginDateScope[0]} and #{beginDateScope[1]}
            </if>
        </where>
    </select>
</mapper>
